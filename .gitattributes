# Set default behavior to automatically normalize line endings
* text=auto

# Explicitly declare text files that should always use LF line endings
*.py text eol=lf
*.js text eol=lf
*.json text eol=lf
*.html text eol=lf
*.css text eol=lf
*.md text eol=lf
*.txt text eol=lf
*.yml text eol=lf
*.yaml text eol=lf
*.toml text eol=lf
*.ini text eol=lf
*.sh text eol=lf

# Windows-specific files that should use CRLF
*.bat text eol=crlf
*.ps1 text eol=crlf

# Denote all files that are truly binary and should not be modified
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.pdf binary
*.xlsx binary
*.xlsb binary
*.sqlite3 binary
*.bin binary
*.exe binary
*.dll binary
*.so binary
*.dylib binary

# Git configuration files should use LF
.gitignore text eol=lf
.gitattributes text eol=lf

